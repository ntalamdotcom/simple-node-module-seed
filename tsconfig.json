{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5", // Adjust to your target environment
        "module": "commonjs",
        "outDir": "./dist",
        "declaration": true, // Generate type definitions
        "declarationDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@types/*": [
                "node_modules/@types/*",
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/types.d.ts"
    ]
}